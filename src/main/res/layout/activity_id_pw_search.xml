<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdPwSearchActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="318dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="ID/PW 찾기"
        android:textColor="#FFA200"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="360dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#86837A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.027" />

    <com.google.android.material.tabs.TabLayout

        android:id="@+id/tabs_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:tabBackground= "@drawable/tab_color_selector"
        app:tabIndicator="@drawable/tab_indicator_color_selector"
        app:layout_constraintTop_toBottomOf="@+id/view2"


        app:tabMode="fixed"
        tools:layout_editor_absoluteX="0dp"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewpager_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tabs_main"


    ></androidx.viewpager.widget.ViewPager>





</androidx.constraintlayout.widget.ConstraintLayout>