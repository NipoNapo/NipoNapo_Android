<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.PostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/p_ic_idol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_ic_idol" />

                    <TextView
                        android:id="@+id/p_idol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_idol"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="291dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/p_ic_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_ic_album" />

                    <Spinner
                        android:id="@+id/p_album_spinner"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/p_ic_have"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_ic_have" />

                    <Spinner
                        android:id="@+id/p_have_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/p_ic_want"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_ic_want" />

                    <Spinner
                        android:id="@+id/p_want_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/p_ic_img"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="@string/p_ic_img" />

                    <Button
                        android:id="@+id/p_img_btn"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="@string/p_img_btn" />

                    <Button
                        android:id="@+id/p_img_btn2"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="@string/p_img_btn2" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/p_imgView"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:scrollbarTrackVertical="@null"
                android:src="@android:drawable/ic_menu_gallery"
                tools:srcCompat="@tools:sample/avatars" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/p_ic_way"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/p_ic_way" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/p_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p_way"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <Button
                        android:id="@+id/p_post_btn"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:text="@string/p_post_btn" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/text_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>